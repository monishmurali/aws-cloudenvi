<div class="row mt-5">
  
  <style>
    body  {
    background-image: url("paper.gif");
    background-color: #97b0ba;
  }
  </style>
  
        <div class="col-md-6 m-auto">
          
          <div class="card card-body">
            <h1 class="text-center mb-3" style="font-size:30px" ><i class="fas fa-sign-in-alt"></i>  Login</h1>
            
            
            <% include ./partials/messages %>
            <form action="/users/login" method="POST">
              <div class="form-group">
                <label for="email" style="color:blue">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="Enter Email"
                />
              </div>
              <div class="form-group">
                <label for="password" style="color:blue">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Enter Password"
                />
              </div>
              <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
            <p class="lead mt-4">
              No Account? <a href="/users/register">Register</a> or <a href="/users/auth/google"> Login with <i class="fab fa-google"></i></a> / <a href="/users/auth/facebook"></i>Login with facebook</i></a>
            </p>
          </div>
        </div>
      </div>
      